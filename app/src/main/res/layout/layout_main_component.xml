<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame_layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/view_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#909090"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/text_view_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="首頁"
            android:textColor="@color/selector_bottom_tab_text"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/selector_bottom_tab_home"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/text_view_store"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="附近店家"
            android:textColor="@color/selector_bottom_tab_text"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/selector_bottom_tab_store"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/text_view_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/selector_bottom_tab_text"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/selector_bottom_tab_mine"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/text_view_more"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/selector_bottom_tab_text"
            android:textSize="12dp"
            app:drawableTopCompat="@drawable/selector_bottom_tab_more"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>